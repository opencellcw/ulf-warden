# Multi-stage build for optimized agent image
# Stage 1: Builder
FROM node:20-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci --only=production && \
    npm cache clean --force

# Copy source code
COPY src/ ./src/

# Build TypeScript
RUN npm run build

# Stage 2: Runtime
FROM node:20-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create non-root user
RUN groupadd -r agent && useradd -r -g agent agent && \
    mkdir -p /app/data /app/logs /app/config && \
    chown -R agent:agent /app

# Copy built application from builder
COPY --from=builder --chown=agent:agent /build/node_modules ./node_modules
COPY --from=builder --chown=agent:agent /build/dist ./dist
COPY --from=builder --chown=agent:agent /build/package*.json ./

# Copy agent configuration (will be overridden by ConfigMap)
COPY --chown=agent:agent config/ ./config/

# Switch to non-root user
USER agent

# Expose API port (configurable via env)
ENV PORT=8080
ENV NODE_ENV=production
ENV DATA_DIR=/app/data
ENV LOG_DIR=/app/logs
ENV CONFIG_DIR=/app/config

EXPOSE ${PORT}

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Start agent in gateway mode
CMD ["node", "dist/index.js"]
