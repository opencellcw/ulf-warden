# Google Cloud Platform
PROJECT_ID=seu-projeto-gcp
REGION=us-central1
ZONE=us-central1-a
CLUSTER_NAME=ulf-cluster

# LLM Provider Selection
# Choose primary provider: claude | moonshot
# LLM_PROVIDER=claude

# LLM Strategy (optional)
# claude_only (default) | moonshot_only | local_only | hybrid | local_fallback
# LLM_STRATEGY=claude_only

# Anthropic Claude (default)
ANTHROPIC_API_KEY=sk-ant-api03-xxx
# CLAUDE_MODEL=claude-opus-4-20250514  # or claude-sonnet-4-20250514, claude-haiku-4-20250514

# Moonshot AI - Kimi (alternative provider with 2M context window)
# Get API key from: https://platform.moonshot.cn/
# MOONSHOT_API_KEY=sk-xxxxxxxxxxxxxxxx
# MOONSHOT_MODEL=kimi-k2.5  # or kimi-latest for auto-upgrade
# MOONSHOT_BASE_URL=https://api.moonshot.cn/v1  # optional

# Cloudflare AI Gateway (opcional - routing, caching, analytics)
# https://developers.cloudflare.com/ai-gateway/
CLOUDFLARE_ACCOUNT_ID=seu-cloudflare-account-id
CLOUDFLARE_GATEWAY_SLUG=ulf-gateway  # Nome do seu gateway no Cloudflare

# Security Configuration (OpenClaw-Security inspired)
# Tool blocklist: comma-separated list of blocked tools
# BLOCKED_TOOLS=web_fetch,web_extract,github_clone,replicate_generate_image
# Or use allowlist mode (only listed tools allowed):
# ALLOWED_TOOLS=execute_shell,read_file,write_file,list_directory

# Tool execution timeout in milliseconds (default: 30000 = 30s)
# TOOL_TIMEOUT_MS=30000

# Maximum concurrent tools per user (default: 5)
# MAX_CONCURRENT_TOOLS=5

# Slack (opcional)
SLACK_BOT_TOKEN=xoxb-xxx
SLACK_APP_TOKEN=xapp-xxx
SLACK_SIGNING_SECRET=xxx

# Discord (opcional)
DISCORD_BOT_TOKEN=xxx
DISCORD_ADMIN_USER_IDS=123456789012345678,987654321098765432  # Comma-separated Discord User IDs com permissão de aprovar melhorias
AUTHORIZED_ADMIN_USERS=123456789012345678  # Discord User IDs autorizados a rotacionar chaves API (usa vírgula para múltiplos)
WHATSAPP_QR_CHANNEL_ID=123456789012345678  # Discord Channel ID onde o bot enviará QR codes do WhatsApp

# Discord Listen Channels (opcional - canais onde o bot responde SEM precisar de @mention)
# Formato: IDs separados por vírgula
# Para descobrir IDs: botão direito no canal → "Copy Channel ID" (precisa Developer Mode ativo)
# DISCORD_LISTEN_CHANNELS=123456789012345678,987654321098765432

# Telegram (opcional)
TELEGRAM_BOT_TOKEN=xxx

# Web Hosting Configuration
# Domain for deployed web apps (defaults to nip.io magic DNS)
# WEB_HOST_DOMAIN=apps.104.198.214.246.nip.io

# Multimodal APIs (opcional - para geração de mídia)
REPLICATE_API_TOKEN=r8_xxx
OPENAI_API_KEY=sk-xxx
ELEVENLABS_API_KEY=sk_xxx

# Cloud Run Agents (opcional - agentes especializados serverless)
# IMAGE_GEN_AGENT_URL=https://image-gen-agent-xxx.a.run.app

# Web Search (opcional - para busca na web)
BRAVE_API_KEY=BSA_xxx  # Get your API key at https://brave.com/search/api/

# ===========================
# Observability & Telemetry
# ===========================

# Telemetry (basic - PII scrubbing, cost tracking)
# TELEMETRY_ENABLED=true

# Distributed Tracing (OpenTelemetry - advanced observability)
# TRACING_ENABLED=true
# TRACING_EXPORTER=console  # Options: console, jaeger, zipkin, otlp

# Jaeger Configuration (if using jaeger exporter)
# JAEGER_ENDPOINT=http://localhost:14268/api/traces

# OTLP Configuration (if using otlp exporter)
# OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Queue System (BullMQ - background jobs)
# QUEUE_ENABLED=true
# REDIS_URL=redis://localhost:6379

# Auto-run Database Migrations
# AUTO_MIGRATE=true

# ===========================
# Phase 4: Proactive Systems (Rex Evolution)
# ===========================

# Heartbeat System - Periodic health checks and autonomous actions
HEARTBEAT_ENABLED=true
HEARTBEAT_INTERVAL_MINUTES=30

# Health Check Thresholds
HEARTBEAT_DISK_THRESHOLD=10           # % minimum free disk space (alert if below)
HEARTBEAT_MEMORY_THRESHOLD=80         # % maximum memory usage (alert if above)
HEARTBEAT_CPU_THRESHOLD=70            # % maximum CPU usage (alert if above)
HEARTBEAT_API_QUOTA_THRESHOLD=80      # % maximum API quota usage (alert if above)

# Notifications (Discord DM to owner)
HEARTBEAT_NOTIFY_DISCORD=true
HEARTBEAT_DISCORD_DM_USER_ID=375567912706416642  # Lucas (owner)

# Memory Auto-Curation (Claude Haiku analyzes daily logs)
MEMORY_CURATION_INTERVAL_HOURS=72     # Default: 72h (3 days)

# Legacy Heartbeat (Slack-only, for backward compatibility)
# LEGACY_HEARTBEAT_ENABLED=true
# HEARTBEAT_CHANNEL=ulf-heartbeat

# Model Context Protocol (MCP) - External Tool Servers
# Connects to MCP servers for extended functionality
# Configure servers in mcp.json

# Brave Search (for web search via MCP)
# BRAVE_API_KEY=your-brave-api-key

# GitHub (for repo management via MCP)
# GITHUB_TOKEN=ghp_your-github-token

# Google Maps (for location services via MCP)
# GOOGLE_MAPS_API_KEY=your-google-maps-key

# Database URL (for PostgreSQL MCP server)
# DATABASE_URL=postgresql://user:pass@localhost:5432/db

